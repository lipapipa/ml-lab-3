pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Setup Environment') {
            steps {
                bat '''
                    chcp 65001 >nul
                    python -m venv venv
                    call venv\\Scripts\\activate
                    python -m ensurepip --upgrade
                    pip install --upgrade pip setuptools
                    pip install -r requirements.txt
                    pip install mlflow
                '''
            }
        }

        stage('Download Data') {
            steps {
                bat '''
                    chcp 65001 >nul
                    call venv\\Scripts\\activate
                    python download.py
                '''
            }
        }

        stage('Train Model') {
            steps {
                bat '''
                    chcp 65001 >nul
                    call venv\\Scripts\\activate
                    echo ==== TRAINING STARTED ====
                    python train_model.py
                '''
            }
        }

        stage('Show Best Model Path') {
            steps {
                bat '''
                    chcp 65001 >nul
                    echo ==== CONTENTS OF best_model.txt ====
                    type best_model.txt
                '''
            }
        }

        stage('Start MLflow Service') {
            steps {
                bat '''
                    chcp 65001 >nul
                    call venv\\Scripts\\activate
                    set BUILD_ID=dontKillMe
                    set JENKINS_NODE_COOKIE=dontKillMe
                    python serve_model.py
                '''
            }
        }

        stage('Test MLflow Service') {
            steps {
                bat '''
                    chcp 65001 >nul
                    curl -X POST http://127.0.0.1:5003/invocations ^
                    -H "Content-Type: application/json" ^
                    --data "{\"inputs\": [[-1.75, -1.23, -1.41, 0.76, 2.20, -0.10, 0.58, 0.11, -1.75, -1.23, -1.41, 0.76, 2.20, -0.10, 0.58, 0.11, -1.75, -1.23, -1.41]]}"
                '''
            }
        }
    }
}

