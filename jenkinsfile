pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

      stage('Setup Environment') {
            steps {
                bat '''
                    "C:\\Users\\Egor\\AppData\\Local\\Programs\\Python\\Python311\\python.exe" -m venv .\\venv
                    call .\\venv\\Scripts\\activate.bat
                    "C:\\Users\\Egor\\AppData\\Local\\Programs\\Python\\Python311\\python.exe" -m pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Download Data') {
            steps {
                bat '''
                    .\\venv\\Scripts\\activate
                    python download.py
                '''
            }
        }

        stage('Train Model') {
            steps {
                bat '''
                    .\\venv\\Scripts\\activate
                    echo "Start train model"
                    python train_model.py > best_model.txt
                '''
            }
        }

      stage('Start MLflow Service') {
    steps {
        bat '''
            call .\\venv\\Scripts\\activate.bat
            set BUILD_ID=dontKillMe
            set JENKINS_NODE_COOKIE=dontKillMe
            set /p MODEL_PATH=<best_model.txt
            echo Starting MLflow with model: %MODEL_PATH%
            
            start "MLflowServe" cmd /c "mlflow models serve -m %MODEL_PATH% -p 5003 --host 0.0.0.0 --no-conda 2> mlflow_errors.log"
            timeout /t 15 /nobreak > nul
            
            type mlflow_errors.log
            netstat -ano | findstr 5003 || echo "MLflow server failed to start"
        '''
    }
}

stage('Test MLflow Service') {
    steps {
        bat '''
            curl -v -X POST http://127.0.0.1:5003/invocations ^
                 -H "Content-Type: application/json" ^
                 --data "{\\"inputs\\": [[-1.759, -1.234, -1.413, 0.761, 2.200, -0.109, 0.589, 0.113]]}"
        '''

            }
        }
    }
}
